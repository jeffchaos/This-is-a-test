<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/layout_course_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:text="调0117"
        android:textColor="#9C9C9C"
        android:textSize="11sp" />

    <ImageView
        android:id="@+id/layout_course_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/layout_course_no"
        android:src="@drawable/course_infor" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/layout_course_iv"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <TextView
                android:id="@+id/layout_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Web编程技术"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/layout_course_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_course_name"
                android:layout_marginTop="2dp"
                android:text="申请时间：2016-02-29-09-57"
                android:textColor="#9C9C9C"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="14dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/layout_course_iv"
        android:layout_toRightOf="@id/layout_course_no"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/layout_course_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原: 周3第3节连续2节{第2-16周}/允明楼1323/张启军"
            android:textColor="#363636"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/layout_course_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="现: 周5第1节连续2节{第2-16周}/文澄楼2303/张启军"
            android:paddingBottom="6dp"
            android:textColor="#363636"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>