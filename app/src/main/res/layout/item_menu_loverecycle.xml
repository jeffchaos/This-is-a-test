<?xml version="1.0" encoding="utf-8"?><!--主界面，可滑动表白墙卡片-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="340dp"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/card_lovemenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_lovemenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#01a3a1"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp">

                <TextView
                    android:id="@+id/tx_lovemenu_object"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:singleLine="true"
                    android:text="对象"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <com.sackcentury.shinebuttonlib.ShineButton
                    android:id="@+id/sb_lovemenu_love"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center_horizontal"
                    android:elevation="10dp"
                    app:btn_color="#f26d7d"
                    app:btn_fill_color="#996699"
                    app:siShape="@raw/heart" />

                <TextView
                    android:id="@+id/tx_lovemenu_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="6"
                    android:minHeight="120dp"
                    android:text="该App使用 Android studio编写 + Material Design视觉设计语言，通过抓包的形式获取信息，喜欢的走一波！"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tx_lovemenu_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:singleLine="true"
                    android:text="表白人"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_lovemenu_below"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/tv_lovemenu_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="赞"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_lovemenu_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="评论"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_lovemenu_tiem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="2016-10-20"
                    android:textColor="#828282"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <com.sackcentury.shinebuttonlib.ShineButton
                        android:id="@+id/sb_lovemenu_like"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="20dp"
                        android:elevation="10dp"
                        app:btn_color="@android:color/darker_gray"
                        app:btn_fill_color="#f26d7d"
                        app:siShape="@raw/heart" />

                    <com.sackcentury.shinebuttonlib.ShineButton
                        android:id="@+id/sb_lovemenu_comment"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        app:btn_color="@android:color/darker_gray"
                        app:btn_fill_color="#996699"
                        app:enable_flashing="true"
                        app:shine_size="40dp"
                        app:siShape="@drawable/ic_sms" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>