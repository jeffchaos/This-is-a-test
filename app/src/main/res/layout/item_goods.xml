<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_goods"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="8dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="3dp">

    <TextView
        android:id="@+id/tv_goods_knife"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="3dp"
        android:background="@drawable/good_knife"
        android:text="可小刀"
        android:textColor="#ffffff"
        android:textSize="10sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_goods_show"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            android:src="@drawable/lost_nopic"
            android:transitionName="@string/transition_goods_img" />

        <TextView
            android:id="@+id/tv_goods_thing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="2dp"
            android:maxLines="2"
            android:singleLine="true"
            android:text="null"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="#ff853a"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="null"
                android:textColor="#ff853a"
                android:textSize="14dp" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_goods_ok"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:scaleType="centerInside"
        android:src="@drawable/lost_ok"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_goods_type"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/goods_cs" />

</android.support.v7.widget.CardView>